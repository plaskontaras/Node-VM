<h1>Edit {{course.title}}</h1>
<form action="/courses/edit" method="POST">

    <div class="input-field">
        <input id="title" type="text" class="validate" name="title" required value="{{course.title}}">
        <label for="title">Course title</label>
        <span class="helper-text" data-error="add title"></span>
    </div>

    <div class="input-field">
        <input id="price" type="number" class="validate" name="price" min="1" required value={{course.price}}>
        <label for="price">Price</label>
        <span class="helper-text" data-error="add price"></span>
    </div>

    <div class="input-field">
        <input id="img" type="text" class="validate" name="img" required value={{course.img}}>
        <label for="img">URL of image</label>
        <span class="helper-text" data-error="add URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Edit course</button>

</form>