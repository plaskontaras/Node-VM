<h1>Basket</h1>
<div id="card">
    {{#if courses.length}}
        <table>
            <thead> 
                <th>Title</th>
                <th>Amount</th>
                <th>Actions</th>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    
        <p><strong>Sum:</strong><span class="price">{{price}}</span></p>
    {{else}}
        <p>You did not choose any courses</p>
    {{/if}}
</div>